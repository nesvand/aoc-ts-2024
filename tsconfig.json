{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "noUncheckedIndexedAccess": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@lib/*": [
                "./lib/*"
            ]
        }
    },
    "include": [
        ".eslintrc.cjs",
        "jest.config.cjs",
        "**/*.ts",
        "**/*.tsx",
        "**/*.cjs",
        "**/*.mjs"
    ],
    "exclude": [
        "node_modules"
    ]
}
